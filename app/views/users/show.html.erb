<h1>User Profile</h1>
<%= link_to 'Edit Profile', edit_user_path %>
<%= image_tag @user.avatar.url(:thumb) %>
<p> Welcome, <%=@user.first_name%> <%=@user.last_name%></p>
<p> Home City: <% id = @user.city_id %> <% if id != nil %>   <% city = City.find(id)%> <%=city.name%> <%=link_to image_tag(city.image_url, size: '200x100'), root_path + "cities/" + city.id.to_s %></p> <%end%>

<div class="blog">
	<div class="container">
 		<div class="main row">
			<div class="col-md">
				<h2 class="style"> RECENT POSTS</h2>
					<div class="blog_main">
						<% @user.posts.each do |post|%>
						<h4><%=post.title%></h4>
					<div class="blog_list pull-left">
					  <ul class="list-unstyled">
							<li><span>City: <%= City.find(post.city_id).name %></span></li>
					  </ul>
					</div>
					<div class="b_left pull-right">
						<span><%=timeago(post.created_at)%></span>
					</div>
					<div class="clearfix"></div>
						<p class="para"><%=post.content%></p>
					</div>
					<div class="b_left pull-right">
					<%= link_to "Edit", "/posts/" + post.id.to_s %> <%= link_to "Delete", delete_post_path(post), method: "delete", data: {confirm: "Are you sure?"}%>
					</div><hr>
					<%end%>
			</div>
		</div>
			<div class="clearfix"></div>
	</div>
</div>